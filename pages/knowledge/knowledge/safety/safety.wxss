.pagebox .section {
  background-color: white;
  margin-bottom: 10rpx;
}

.pagebox .section .page_bz {
  background-color: #f5f3f4;
}

.pagebox .section .page_auto {
  width: 92%;
  margin: 0 auto;
  font-size: 28rpx;
}

.pagebox .section .page_gb {
  margin-left: 60rpx;
  font-size: 32rpx;
  width: 80%;
  margin: 0 auto;
  padding: 20rpx 0;
}
.pagebox .section .page_gb text{
  font-size: 34rpx;
}

.pagebox .section .page_table {
  width: 92%;
  margin: 0 auto;
  margin-bottom: 60rpx;
}
.pagebox .section .page_table .page_title{
  width: 100%;
  text-align: center;
  font-weight: bold;
}

.pagebox .section .page_table .table {
  border-left: 1px solid black;
  border-bottom: 1px solid black;
}

.pagebox .section .page_table .tr {
  display: flex;
  width: 100%;
  height: 50rpx;
  align-items: center;
}

.pagebox .section .page_table .td {
  width: 25%;
  height: 50rpx;
  justify-content: center;
  text-align: center;
  border-top: 1px solid black;
  border-right: 1px solid black;
}

.pagebox .section .page_table .th {
  width: 25%;
  justify-content: center;
  color: black;
  font-weight: bold;
  display: flex;
  border-top: 1px solid black;
  border-right: 1px solid black;
}
