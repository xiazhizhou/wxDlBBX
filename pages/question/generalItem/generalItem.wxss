/* pages/question/generalItem/generalItem.wxss */
page {
  background: linear-gradient(180deg, #3e6df9, #2641a8 20%, #03002b);
  position: relative;
}
.authority{
  color: white;
  overflow: hidden;
}
.authority_header{
  height: 140rpx;
  width: 100%;
  background-color:#0099ff; 
  display: flex;
  border-bottom: 4rpx solid black;
  padding-bottom: 20rpx;
  font-size: 28rpx;
  opacity: 0.8;
}
.authority_hleft{
  width: 33.3333333%;
  margin: 0 0 0 20rpx;
}
.authority_hright{
  width: 33.3333333%;
  margin-top: 30rpx;
}
.authority_hleft .authority_tx{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.authority_hleft .authority_tx image{
  width: 100%;
  height: 100%;
}
.authority_header .authority_box{
  display: flex;
  margin-bottom: 10rpx;
}
.authority_header .authority_box .authority_name{
  display: flex;
  align-items: center;
}
.authority_hright .authority_fhk{
  margin-bottom: 20rpx;
}

.ranking{
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}
.ranking .btnSize, .ranking_btn .btnSize{
  width: 220rpx;
  padding: 8rpx 0; 
}
.ranking .ranking_btn{
  display: flex;
  justify-content: center;
}
.ranking .btncolop{
  background-color: #efad63;
  margin-right: 30rpx;
}
.ranking .btncoloc{
  margin-left: 30rpx;
  background-color: #1cddd8;
}
.ranking_btn button{
  background-color: #1cddd8;
  margin: 0 15rpx;
}
.xuan{
  margin: 40rpx 0 0 0;
  padding-left: 40rpx;
}
.zb{
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.zb .ranking_btn .btnColorz{
  background-color: #24aa47;
}
.ceshi_swiper{
  position: relative;
  height: 250rpx;
}
.ceshi_swiper .read_swiper text{
  font-size: 40rpx;
}
.ceshi_swiper .ceshi_next{
  position: absolute;
  top:55%;
  left:0;
  transform: scale(2);
}
.ceshi_swiper .ceshi_prew{
  position: absolute;
  top:55%;
  right:0;
  transform: scale(2);
}
.authority_center{
  width: 33.3333333%;
  display: flex;
  align-items:flex-end;
  font-size: 14px;
  opacity: 0.8;
}
.authority_centerAuto{
  width: 55%;
  margin: 0 auto;
}
.authority_center .authority_centerCor{
  display: flex;
  justify-content: center;
  align-items: center;
  border:1px solid white;   
  border-radius: 20rpx;
  font-size: 12px;
}
.name{
  background-color: #f784a5!important;
}
.answer{
  background-color: #f03129!important;
}

.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}
.wx-dialog {
  position: fixed;
  z-index: 5000;
  width: 92%;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}
.wx-x{
  position: absolute;
  right: 20rpx;
  top: 0;
}

.wx-dialog-title {
  font-size: 18px;
  padding: 15px 15px 5px;
}
.wx-dialogbor{
  width: 260rpx;
  height: 3rpx;
  background-color: #7f7f7f;
  margin: 0 auto;
}
.wx-dialog-content {
  text-align: left;
  margin: 10rpx 20px;
}
.wx-dialog-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  line-height: 45px;
  font-size: 17px;
}
.wx-dialog-btn {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(1) {
  color: #353535;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(2) {
  color: #3cc51f;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(2):after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #d5d5d6;
  color: #d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}
.wx-dialogColor{
  background-color: #f03129;
}
.wx-dialog-size{
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 80rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.wx-dialog-footerbtn{
  color: white;
  margin-right: 40rpx;
  background-color:#f03129; 
}
.wx-dialog-footerbtn2{
  color: white;
  margin-left: 40rpx;
  background-color:#24aa47; 
}
.wx-box{
  padding: 30rpx 0;
}
.wx-setting{
  border-radius: 50rpx;
  color: white;
  background-color:#24aa47; 
  font-size: 14px;
}
