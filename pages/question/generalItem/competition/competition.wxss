/* pages/question/generalItem/competition/competition.wxss */
page {
  background: linear-gradient(180deg, #3e6df9, #2641a8 20%, #03002b);
}
.wx-user{
  width: 100%;
}
.wx-user .wx-user-box{
  width: 92%;
  margin: 30rpx auto;
  border-radius: 10rpx;
  background-color: white;
}
.wx-user .wx-user-title{
  font-size: 16px;
  padding: 5px 10px 5px 10px;
  display: flex;
  justify-content: center;
}
.wx-user .wx-userbor{
  width: 260rpx;
  height: 3rpx;
  background-color: #7f7f7f;
  margin: 0 auto;
}
.wx-user-content{
  width: 92%;
  margin: 0 auto;
  padding: 16rpx 0;
}
.wx-user-contentflex{
  display: flex;
}

.ranking view{
  display: flex;
  justify-content: center;
  align-items: center;
}
.rankingzt{
  color: white;
}
.ranking .btnSize, .ranking_btn .btnSize{
  width: 220rpx;
  padding: 8rpx 0; 
}
.ranking .btncolop{
  background-color: #f03129;
}
.ranking .btncoloc{
  background-color: #24aa47;
}
.ranking .rankingmargin{
  margin-top: 40rpx;
}
.ranking .red{
  color: red;
}
.ranking .white{
  color: #24aa47;
}
.wx-title{
  width: 100%;
  padding-bottom: 40rpx;
}
.wx-titleAuto{
  width: 94%;
  margin: 0 auto;
  font-size: 14px;
  opacity: 0.8;
}