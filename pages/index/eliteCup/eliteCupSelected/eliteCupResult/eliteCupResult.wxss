page {
  background: linear-gradient(180deg, #3e6df9, #2641a8 20%, #03002b);
}
.wx-user{
  width: 100%;
}
.wx-user .wx-user-box{
  width: 92%;
  margin: 30rpx auto;
  border-radius: 10rpx;
  background-color: white;
}
.wx-user .wx-user-title{
  font-size: 16px;
  padding: 5px 10px 5px 10px;
  display: flex;
  justify-content: center;
}
.wx-user .wx-userbor{
  width: 260rpx;
  height: 3rpx;
  background-color: #7f7f7f;
  margin: 0 auto;
}
.wx-user-content{
  width: 92%;
  margin: 0 auto;
  padding: 24rpx 0;
}
.wx-user-contentflex{
  display: flex;
}

.ranking{
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}
.ranking .btnSize, .ranking_btn .btnSize{
  width: 220rpx;
  padding: 8rpx 0; 
}
.ranking .ranking_btn{
  display: flex;
  justify-content: center;
}
.ranking .btncolop{
  background-color: #efad63;
}
.ranking .btncolor{
  background-color: #e29978;
}
.ranking .btncoloc{
  background-color: #6f93e7;
}
.ranking .btncoloc2{
  background-color: #ce7593;
}
.ranking .btncoloc3{
  background-color: #a6cb9f;
}

.ranking_btn button{
  background-color: #1cddd8;
  margin: 0 15rpx;
}
.wx-user-bottom{
  margin-top: 200rpx;
}
.btnringth{
  margin-right: 40rpx;
}
.btnleft{
  margin-left: 40rpx;
}
