/* components/reload/reload.wxss */
@import '../../app.wxss';
.wx_reload_container{
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: absolute;
}
.wx_reload_container .wx-reload {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.wx_reload_container .wx-reload .wx-message{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin-top: 0;
  margin-bottom: 20px;
  font-size: 32rpx;
  color: gray;
  align-items: center;
}
.wx_reload_container .wx-reload .wx-message text:nth-child(1){
  font-size: 60rpx;
}
.wx_reload_container .wx-reload button{
  border: 2rpx solid #0E92F6;
  color: #0E92F6;
  margin: 0;
  padding: 0 72rpx;
  height: 80rpx;
  border-radius: 5px;
  font-size: 32rpx;
}
