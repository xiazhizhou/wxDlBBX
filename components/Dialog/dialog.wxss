/* components/dialog/dialog.wxss */
@import '../../app.wxss';
.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.wx-dialog {
  position: fixed;
  z-index: 5000;
  width: 92%;
  top: 50%;
  left: 50%;
  padding-bottom: 30rpx;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}

.wx-dialog-title {
  font-size: 18px;
  padding: 15px 15px 5px;
}
.wx-dialogbor{
  width: 260rpx;
  height: 3rpx;
  background-color: #7f7f7f;
  margin: 0 auto;
}
.wx-dialog-content {
  padding: 15px 15px 5px;
  min-height: 40px;
  font-size: 16px;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: black;
}

.wx-dialog-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  line-height: 45px;
  font-size: 17px;
}
.wx-dialog-btn {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(1) {
  color: #353535;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(2) {
  color: #3cc51f;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(2):after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #d5d5d6;
  color: #d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}
.wx-dialogColor{
  background-color: #f03129;
}
.wx-dialog-size{
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 80rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.wx-dialog-footerbtn{
  color: white;
  margin-right: 40rpx;
  background-color:#f03129; 
}
.wx-dialog-footerbtn2{
  color: white;
  margin-left: 40rpx;
  background-color:#24aa47; 
}
